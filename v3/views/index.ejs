<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp! </h1>
            <p>View our hand picked campgrounds from all over the world</p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">add new campgrounds</a>
        </div>
    </header>
    <div class="row justify-content-around" style="grid-row-gap: 50px;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="text-center img-col-md-3 img-col-sm-6 " >
                <div class="img-thumbnail img-fluid ">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Read More</a>
                </div>              
            </div>
         <% })%>
    </div>
</div>
    

